@model List<tl2_tp6_2024_s0a0m.ViewModels.ClienteViewModel>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<h1>@ViewData["Title"]</h1>

<a asp-action="CrearCliente" asp-controller="Cliente" class="btn btn-primary mb-3">
    Crear Nuevo Cliente
</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Telefono</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nombre</td>
                <td>@cliente.Telefono</td>
                <td>@cliente.Email</td>
            </tr>
        }
    </tbody>
</table>
